{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@app/*": [ "src/*"],
      "@core/*": [ "src/core/*"],
      "@features/*": [ "src/features/*"],
      "@shared/*": [ "src/shared/*"]
    }
  }
}
